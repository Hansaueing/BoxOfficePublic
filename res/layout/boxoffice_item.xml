<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" >

        <TextView
            android:id="@+id/tv_f1_moviename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/tv_f1_today_bo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_f1_moviename"
            android:layout_below="@+id/tv_f1_moviename"
            android:textColor="#444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_f1_sum_bo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_f1_moviename"
            android:layout_below="@+id/tv_f1_today_bo"
            android:textColor="#444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_f1_days"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tv_f1_sum_bo"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_f1_moviename"
            android:layout_marginRight="3dp"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>